{% extends 'base.html.twig' %}

{% block title %}
    {{ slug }}
{% endblock %}

{% block body %}
    <div class="media">
        <img src="{{ program.poster }}" alt="{{ program.title }} poster" class="align-self-start mr-3">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
    </div>

    <a class="btn btn-success" href="{{ path('wild_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
