{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1 class="text-center">Category index</h1>

    <div class="container">
        <div class="row">
            <table class="table-borderless m-5">
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td class="col-md-7 text-center">{{ category.name }}</td>
                        <td>
                            <div class="container">
                                <div class="row">
                                    <a class="btn btn-outline-success"
                                       href="{{ path('category_show', {'id': category.id}) }}">show</a>
                                    <a class="btn btn-outline-success"
                                       href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="container">
        <div class="row-cols-md-2">
            <a class="btn btn-outline-success" href="{{ path('category_new') }}">Add Category</a>
            <a class="btn btn-outline-success" href="{{ path('admin') }}">Back</a>
        </div>
    </div>
{% endblock %}
