{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}

<div class="container">
    <h2 class="mt-5 mb-5">Comment index</h2>
    <div class="row">
        <table class="table col-6">

            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.comment }}</td>
                    <td>{{ comment.rate }}</td>
                    <td>{{ comment.date ? comment.date|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a class="btn btn-outline-dark" href="{{ path('comment_edit', {'id': comment.id}) }}">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>


    <a class="btn btn-outline-dark" href="{{ path('comment_new') }}">Create new</a>
{% endblock %}
