{% extends 'base.html.twig' %}

{% block title %}Episode index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5 mb-5 text-center">Episodes</h1>
        <div class="row">
            <table class="table col-12">
                <tbody>
                {% for episode in episodes %}
                    <tr>
                        <td>{{ episode.title }}</td>
                        <td>{{ episode.number }}</td>
                        <td>{{ episode.synopsis }}</td>
                        <td>
                            <div class="container">
                                <div class="row">
                                    <a class="btn btn-outline-dark"
                                       href="{{ path('episode_edit', {'slug': episode.slug}) }}">Edit</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <div id="wrapper">
                        <h1 class="glitch" data-text="Not found">Not found</h1>
                        <span class="sub">Nothing Here</span>
                    </div>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="container">
        <div class="row p-5 justify-content-center ">
            <a class="btn btn-outline-dark" href="{{ path('episode_new') }}">New Episode</a>
            <a class="btn btn-outline-dark ml-5" href="{{ path('admin') }}">Back</a>
        </div>
    </div>
{% endblock %}
