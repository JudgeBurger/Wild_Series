{% extends 'base.html.twig' %}

{% block title %}Episode index{% endblock %}

{% block body %}
    <h1>Episode index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Number</th>
            <th>Synopsis</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td class="col-md-1">{{ episode.title }}</td>
                <td class="col-md-1">{{ episode.number }}</td>
                <td class="col-md-7">{{ episode.synopsis }}</td>
                <td>
                    <div class="container">
                        <div class="row">
                            <a class="btn btn-outline-success col-md-2"
                               href="{{ path('episode_show', {'id': episode.id}) }}">show</a>
                            <a class="btn btn-outline-success"
                               href="{{ path('episode_edit', {'id': episode.id}) }}">edit</a>
                        </div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-success" href="{{ path('episode_new') }}">Create new</a>
    <a class="btn btn-outline-success" href="{{ path('admin') }}">Back</a>

{% endblock %}
