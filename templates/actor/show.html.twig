{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Actor</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Name</th>
            <td>{{ actor.name }}</td>
        </tr>
        <tr>
            {% for program in actor.programs %}
                <li>
                    <a href="{{ path('program_show', {"id":program.id}) }}">{{ program.title }}</a>
                </li>
            {% else %}
                'No serie for this actor
            {% endfor %}
        </tr>
        </tbody>
    </table>
    <div class="container">
        <div class="row justify-content-center">
            <a class="btn btn-outline-success" href="{{ path('actor_index') }}">Back to list</a>
            <a class="btn btn-outline-success ml-5" href="{{ path('actor_edit', {'slug': actor.slug}) }}">Edit</a>
        </div>
        {{ include('actor/_delete_form.html.twig') }}
    </div>
{% endblock %}
